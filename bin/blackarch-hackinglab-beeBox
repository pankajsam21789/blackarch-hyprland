test ! -f /sbin/aria2c && blackarch-pkg-add aria2
cd ~/Downloads/
aria2c -c $(curl https://sourceforge.net/projects/bwapp/files/bee-box/bee-box_v1.6.7z/download | grep -oP 'href="\K[^"]+')
unzip -d /virtualbox/ $HOME/Downloads/bee-box_v1.6.7z
echo  Configuring Virtual Machine for VPLE ...
VBoxManage createvm --name "vple" --register
VBoxManage modifyvm "VPLE" --memory 512 --acpi on --boot1 dvd --nic1 nat
VBoxManage storagectl "VPLE" --name "SATA Controller" --add sata --controller IntelAhci
VBoxManage storageattach "VPLE" --storagectl "SATA Controller" --port 0 --device 0 --type hdd --medium /virtualbox/Metasploitable2-Linux/Metasploitable.vmdk
VBoxManage startvm "VPLE" --type headless

