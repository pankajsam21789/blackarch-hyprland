#!/bin/bash

if (($# == 0)); then
  echo "Usage: blackarch-channel-set [stable|edge|dev]"
  exit 1
else
  channel="$1"
fi

case "$channel" in
"stable") blackarch-branch-set "master" && blackarch-refresh-pacman "stable" ;;
"edge") blackarch-branch-set "master" && blackarch-refresh-pacman "edge" ;;
"dev") blackarch-branch-set "dev" && blackarch-refresh-pacman "edge" ;;
*) echo "Unknown channel: $channel"; exit 1; ;;
esac

blackarch-update -y
