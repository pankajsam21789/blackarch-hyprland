#!/bin/bash

if grep -q "https://stable-mirror.blackarch.org/" /etc/pacman.d/mirrorlist; then
  mirror="stable"
elif grep -q "https://mirror.blackarch.org/" /etc/pacman.d/mirrorlist; then
  mirror="edge"
else
  mirror="unknown"
fi

if grep -q "https://pkgs.blackarch.org/stable/" /etc/pacman.conf; then
  pkgs="stable"
elif grep -q "https://pkgs.blackarch.org/edge/" /etc/pacman.conf; then
  pkgs="edge"
else
  pkgs="unknown"
fi

if [[ $mirror == $pkgs ]]; then
  echo $mirror
else
  echo "$mirror / $pkgs"
fi
